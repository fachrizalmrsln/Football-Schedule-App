<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailPlayerActivity">

    <include
        layout="@layout/toolbar"/>

    <ProgressBar
        android:id="@+id/progress_detail_player"
        android:layout_width="@dimen/size60"
        android:layout_height="@dimen/size60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size250"/>

    <LinearLayout
        android:id="@+id/container_detail_player"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            app:cardCornerRadius="@dimen/margin8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:id="@+id/image_player_detail"
                    android:layout_width="@dimen/size100"
                    android:layout_height="@dimen/size100"
                    android:src="@drawable/ic_launcher_background"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin8"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_player_name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_name"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_player_nationality_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_nationallity"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/text_player_born_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_born"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/text_player_birth_location_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/birth_location"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/text_player_height_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_height"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/text_player_weight_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_weight"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            app:cardCornerRadius="@dimen/margin8">

            <LinearLayout
                android:layout_margin="@dimen/margin8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_player_fan_art_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size200"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/text_player_team_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player_team"
                    android:layout_margin="@dimen/margin8"
                    android:textSize="@dimen/textSize20"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_player_position_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player_position"
                    android:textSize="@dimen/textSize16"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>