<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailMatchActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size250"
        android:layout_margin="@dimen/margin8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/date_detail"
                    android:layout_width="@dimen/size200"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin8"
                    android:textSize="@dimen/textSize18"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="@dimen/padding8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image2_template"
                        android:layout_width="@dimen/size100"
                        android:layout_height="@dimen/size100"
                        android:layout_margin="@dimen/margin4"
                        android:src="@drawable/ic_launcher_background"/>

                    <TextView
                        android:id="@+id/text_template1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize20"
                        android:layout_margin="@dimen/margin4"
                        android:textColor="@android:color/black"
                        android:text="@string/teams"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/padding8"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize30"
                        android:layout_margin="@dimen/margin4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/score"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize30"
                        android:layout_margin="@dimen/margin4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/vs"/>

                    <TextView
                        android:id="@+id/score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize30"
                        android:layout_margin="@dimen/margin4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/score"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="@dimen/padding8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_template2"
                        android:layout_width="@dimen/size100"
                        android:layout_height="@dimen/size100"
                        android:layout_margin="@dimen/margin4"
                        android:src="@drawable/ic_launcher_background"/>

                    <TextView
                        android:id="@+id/text_template2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize20"
                        android:layout_margin="@dimen/margin4"
                        android:textColor="@android:color/black"
                        android:text="@string/teams"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_match"
                android:textSize="@dimen/textSize18"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/margin16"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goals1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/shoot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goals"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shoot"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goals2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/shoot2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textSize="@dimen/textSize18"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/margin16"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>